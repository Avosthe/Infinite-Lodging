@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (!(string.IsNullOrEmpty(Model.userAlertMessage)))
{
    <div id="log_alert" class="alert alert-info fade in alert-dismissible" style="text-align: center; width: 1200px;">
        <p style="font-size: large">@Model.userAlertMessage</p>
        <a href="#" id="close_alert" class="close" data-dismiss="alert" aria-label="close" title="close">x</a>
    </div>
}

<section>
    <img src="~/images/modernhouse3.jpg" />
    <div style="width:400px;height:400px;background-color:white;position:absolute;margin:-450px 0 0 100px;border-radius:10px">
        <div style="color:midnightblue;text-align:center;font-size:26px;padding:10px;">
            <u><b>Welcome to Infinite Lodging!</b></u>
            <div style="padding-top:12px;font-size:17px;">Explore homes and private rooms in any country for the lowest prices!</div>
        </div>
        <div>
            <form style="padding:10px;margin:20px">
                <label style="">Please enter your desired location</label>
                <input placeholder="Anywhere" name="location" style="font-size:20px;border-radius:4px;border:1px solid lightgray;height:40px;width:100%;padding:7px;" id="locationSearch" type="text" />

                <div style="margin-top:20px;">
                    <label style="margin-right:5%;width:45%">From</label>
                    <label style="width:45%">To</label>
                </div>
                <div style="width:100%">
                    <input style="padding:5px;border-radius:4px;border:1px solid lightgray;margin-right:2.5%;height:40px;width:46%" id="dateStart" type="date" />
                    <input style="padding:5px;border-radius:4px;border:1px solid lightgray;margin-left:2.5%;height:40px;width:46%;" id="dateEnd" type="date" />
                </div>
                <input asp-page="./Listings" style="border-radius:4px;color:white;margin-top:20px;width:100%;height:50px;border:none;background-color:midnightblue" type=submit value="Go!">
            </form>
        </div>
    </div>
</section>
